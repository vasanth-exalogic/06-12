                                <% end%>
                                <div class="container-card">
                                  <h4 class="font-bebas" style="color:black; text-align:left;"><b><%= user.fname%><br></b></h4>
                                  <p class="font-beba-small" style="color:grey; text-align:right;"><%= temp.email%></p>
                                </div>
                              </div>
                            </a>

                          </td>
                      <% elsif i%3==1%>
                          <td align="center">
