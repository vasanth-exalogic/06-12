<%= form_for @user do |f|%>
<span><%= @create_error%></span>
<table class="table table-striped table-dark">
  <% if session[:temp]=='edit' %>
    <tr>
      <td class="font-beba-small active-tab" style="vertical-align:middle;"><a href="#" style="color:white; text-decoration:none;">Login Details</a></td>
      <td class="font-beba-small" style="vertical-align:middle;"><a href="<%= edit_detail_path(@user) %>" style="color:grey; text-decoration:none;">Personal Details</a></td>
      <td class="font-beba-small" style="vertical-align:middle;"><a href="<%= edit_emergency_path(@user) %>" style="color:grey; text-decoration:none;">Other Details</a></td>
      <td class="font-beba-small" style="vertical-align:middle;"><a href="<%= edit_account_path(@user) %>" style="color:grey; text-decoration:none;">Account Details</a></td>
    </tr>
  <% else %>
    <tr>
      <td class="font-beba-small active-tab" style="vertical-align:middle;">Login Details</td>
      <td class="font-beba-small" style="vertical-align:middle; color:grey;">Personal Details</td>
      <td class="font-beba-small" style="vertical-align:middle; color:grey;">Other Details</td>
      <td class="font-beba-small" style="vertical-align:middle; color:grey;">Account Details</td>
    </tr>
  <% end%>
  <tr>
    <td><%= f.label "Email "%><font color="white">*</font></td>
    <td><%= f.email_field :email, :required=>true%><span><%= @user.errors[:email][0] rescue nil%></span></td>
    <td><%= f.label "Role "%><font color="white">*</font></td>
    <td><%= f.select :role, [['User','user'],['Admin','admin']] %><span><%= @user.errors[:role][0] rescue nil%></span></td>
  </tr>
  <tr>
    <td><%= f.label "Password"%></td>
    <td><%= f.password_field :password, :minlength => 6%></td>
    <td><%= f.label "Confirm Password"%></td>
    <td><%= f.password_field :password_confirmation, :minlength => 6%></td>
  </tr>
  <tr>
    <td><%= f.submit "Next"%></td>
    <td colspan="3"><span><%= @error %></span></td>
  </tr>
</table>
<pre>
</pre>
<% end%>
