<%= form_for @detail do |f|%>
<table class="table table-striped table-dark">
  <tr>
    <td class="font-beba-small" style="vertical-align:middle; color:grey;">Login Details</td>
    <td class="font-beba-small active-tab" style="vertical-align:middle;">Personal Details</td>
    <td class="font-beba-small" style="vertical-align:middle; color:grey;">Other Details</td>
    <td class="font-beba-small" style="vertical-align:middle; color:grey;">Salary Details</td>
  </tr>
        <tr>
          <td><%= f.label "First Name "%><font color="white">*</font></td>
          <td><%= f.text_field :fname%><span style="color:white;"><%= @detail.errors[:fname][0] rescue nil%></span></td>
          <td><%= f.label "Last Name "%><font color="white">*</font></td>
          <td><%= f.text_field :lname%><span style="color:white;"><%= @detail.errors[:lname][0] rescue nil%></span></td>
        </tr>
        <tr>
          <td><%= f.label "Date of Birth "%><font color="white">*</font></td>
          <td><%= f.date_field :dob, :max => Date.new(Date.today.year-18,Date.today.mon,Date.today.mday)%></td>
          <td><%= f.label "Date of Joining"%></td>
          <td><%= f.date_field :doj, :max => Date.today%></td>
        </tr>
        <tr>
            <td><%= f.label "Blood Type"%></td>
          <td><%= f.select :bloodtype, [['Blood Type',nil],'AB+','AB-','A+','A-','B+','B-','O+','O-']%></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label "Contact "%><font color="white">*</font></td>
          <td><%= f.text_field :contact, :pattern=>'\d*', :maxlength=>10, :minlength=>10%></td>
          <td><%= f.label "Gender "%><font color="white">*</font></td>
          <td><%= f.radio_button :gender, 'Male'%> Male <%= f.radio_button :gender, 'Female '%> Female <br><span style="color:white;"><%= @detail.errors[:gender][0] rescue nil%></span></td>
        </tr>
        <tr>
          <td><%= f.label :address%></td>
          <td><%= f.text_area :address, :rows => 1%></td>
          <td><%= f.label :city%></td>
          <td><%= f.text_field :city%></td>
        </tr>
        <tr>
          <td><%= f.label :state%></td>
          <td><%= f.select :state, [['State',nil],'Andaman and Nicobar Islands','Andhra Pradesh','Arunachal Pradesh','Assam',
            'Bihar','Chandigarh','Chhattisgarh','Dadra and Nagar Haveli','Daman and Diu','Delhi','Goa','Gujarat','Haryana',
            'Himachal Pradesh','Jammu and Kashmir','Jharkhand','Karnataka','Kerala','Ladakh','Lakshadweep','Madhya Pradesh',
            'Maharashtra','Manipur','Meghalaya','Mizoram','Nagaland','Odisha','Puducherry','Punjab','Rajasthan','Sikkim','Tamil Nadu',
            'Telangana','Tripura','Uttar Pradesh','Uttarakhand','West Bengal']%></td>
          <td><%= f.label :country%></td>
          <td><%= f.select :country, [['Country',nil],'India']%></td>
        </tr>
        <tr>
          <td><%= f.label "Pincode"%></td>
          <td><%= f.text_field :pincode, :pattern=>'\d*', :maxlength=>6, :minlength=>6%></td>
          <td><%= f.label "Notice period in days"%></td>
          <td><%= f.number_field :notice, :min=>0%></td>
        </tr>
        <tr>
          <td><%= f.submit "Next" %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
</table>
<pre>
</pre>
<% end%>
